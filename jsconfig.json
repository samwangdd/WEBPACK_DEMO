{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@controller/*": ["./src/controller/*"],
      "@services/*": ["./src/services/*"],
      "@models/*": ["./src/models/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@utils/*": ["./src/utils/*"],
      "@styles/*": ["./src/styles/*"],
      "@assets/*": ["./src/assets/*"],
    }
  },
    "exclude": [
      "node_modules",
      "dist"
    ]
  }